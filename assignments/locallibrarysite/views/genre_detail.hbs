<h1>Genre: {{genre.name}}</h1>

<div>
    <h4>Books</h4>
    {{#if genre_books}}
        <dl>
            {{#each genre_books}}
            <dt><a href="{{url}}">{{title}}</a></dt>
            <dd>{{summary}}</dd>
            {{/each}}
        </dl>
    {{else}}
        <p>This genre has no books</p>
    {{/if}}
</div>